<table class="table table-hover">
  <thead>
  <tr>

    <th>Name</th>
    <th>Email</th>
    <th>CNIC</th>
    <th>Blood Group</th>
  </tr>
  </thead>
  <tbody>
  <% @patients.each do | p| %>
    <tr>

      <td> <%= p.name %></td>
      <td> <%= p.email %></td>
      <td> <%= p.cnic %></td>
      <td> <%= p.blood_group %></td>
      <td>
        <%=link_to 'edit', edit_patient_path(p), class: "btn btn-info" %>
        <%= link_to 'delete', p, method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>

<%= link_to 'Add New', new_patient_path, class:"btn btn-primary" %>