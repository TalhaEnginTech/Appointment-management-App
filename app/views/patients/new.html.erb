
<%= form_with model: @patient, url: patients_path do |f| %>
  <div class="form-group row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class:"form-control"%>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :cnic %>
      <%= f.text_field :cnic, class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :blood_group %>
      <%= f.select :blood_group,  options_for_select([ "A-", "A+", "AB+", "B-", "O-", "O+", "B+" ]), class:"form-control"%>
    </div>
  </div>

  <%= f.submit "submit", class: "btn btn-submit" %>
<%end%>


