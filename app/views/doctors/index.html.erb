<table class="table table-hover">
  <thead>
    <tr>

      <th>Name</th>
      <th>Email</th>
      <th>CNIC</th>
      <th>Area of specialization</th>
    </tr>
  </thead>
  <tbody>
   <% @doctors.each do | d| %>
    <tr>

      <td> <%= d.name %></td>
      <td> <%= d.email %></td>
      <td> <%= d.cnic %></td>
      <td> <%= d.spec %></td>
      <td>
        <%=link_to 'edit', edit_doctor_path(d), class: "btn btn-info" %>
        <%= link_to 'delete', d, method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
   <% end %>

  </tbody>
</table>

<%= link_to 'Add New',new_doctor_path, class:"btn btn-primary" %>