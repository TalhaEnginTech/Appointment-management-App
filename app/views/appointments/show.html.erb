<button><%= link_to 'Generate PDF',  appointment_path(@appointment, format: :pdf), class: "btn btn-danger" %></button>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Doctor </th>
    <th>Patient</th>
    <th>Date</th>
    <th>Time</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @appointment.doctor.name %></td>
      <td><%= @appointment.patient.name %></td>
      <td><%= @appointment.appointment_date.strftime("%m/%d/%Y") %></td>
      <td><%= @appointment.appointment_date.strftime("%r") %></td>
      <td><%= @appointment.status %></td>
    </tr>

  </tbody>
</table>

<%=link_to 'Back', appointments_path, class: "btn btn-info" %>